<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Recipe Blog</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <h1>Recipe Blog</h1>
        <nav>
            <ul>
                <li><a href="@Url.Action("Index", "Recipes")">Home</a></li>
                <li><a href="@Url.Action("Create", "Recipes")">Create Recipe</a></li>
            </ul>
        </nav>
    </header>
    <main role="main" class="container">
        @RenderBody()
    </main>
    <footer>
        <p>&copy; @DateTime.Now.Year - Recipe Blog</p>
    </footer>
</body>
</html>