@{
    ViewData["Title"] = "Recipe List";
}

<h1>Recipes</h1>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var recipe in Model)
        {
            <tr>
                <td>@recipe.Title</td>
                <td>
                    <a href="@Url.Action("Details", "Recipes", new { id = recipe.Id })">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "Recipes")" class="btn btn-primary">Create New Recipe</a>